{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/apps/oauth2/*"],
      "@init/*": ["src/apps/init/*"],
      "@config": ["src/config"]
    },
    "incremental": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "client"]
}
